{
  "name": "@story-ui/visual-builder",
  "version": "1.0.0",
  "description": "Visual Builder component for Story UI",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@mantine/core": "^7.15.1",
    "@mantine/hooks": "^7.15.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.0",
    "jest": "^29.5.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [".ts", ".tsx"],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)?$": ["ts-jest", { "useESM": true }]
    },
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/__tests__/**/*.(test|spec).(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}